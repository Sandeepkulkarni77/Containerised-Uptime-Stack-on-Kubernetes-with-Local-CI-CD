pipeline {
    agent any

    environment {
        IMAGE_NAME = "flask-uptime-app"
        REGISTRY = "localhost:5001"
        NAMESPACE = "uptime-dev"
    }

    stages {

        stage('Build Image') {
            steps {
                echo "Building Docker image..."
                sh """
                docker build -t ${IMAGE_NAME}:latest ../app
                """
            }
        }

        stage('Tag Image for Registry') {
            steps {
                echo "Tagging image for local registry..."
                sh """
                docker tag ${IMAGE_NAME}:latest ${REGISTRY}/${IMAGE_NAME}:latest
                """
            }
        }

        stage('Push to Local Registry') {
            steps {
                echo "Pushing to registry..."
                sh """
                docker push ${REGISTRY}/${IMAGE_NAME}:latest
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "Deploying to Kubernetes..."
                sh """
                kubectl apply -f ../k8s/
                """
            }
        }

        stage('Verify Rollout') {
            steps {
                echo "Checking rollout status..."
                sh """
                kubectl rollout status deployment/uptime-app -n ${NAMESPACE}
                """
            }
        }
    }
}

